<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mymiu.MyMusicActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            style="@style/ToolbarText"
            android:text="@string/mymusic" />
    </android.support.v7.widget.Toolbar>
    <com.mymiu.myview.mpager.CustomPagerSlidingTabStrip
        android:id="@+id/my_music_top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_tab_height_size"
        style="@style/pagertab_style">

    </com.mymiu.myview.mpager.CustomPagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/my_music_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
