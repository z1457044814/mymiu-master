<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mymiu.fragment.FoundFragment">

    <com.mymiu.myview.mpager.CustomPagerSlidingTabStrip
        android:id="@+id/found_top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_tab_height_size"
        style="@style/pagertab_style">

    </com.mymiu.myview.mpager.CustomPagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/found_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
