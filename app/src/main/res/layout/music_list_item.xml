<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 头部索引-->
    <TextView
        android:id="@+id/letter_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/home_bar_text_normal"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:gravity="clip_vertical"
        android:textSize="18sp"
        android:paddingLeft="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/letter_head"
        android:orientation="horizontal">


        <View
            android:id="@+id/music_list_index"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp">

        </View>

        <ImageView
            android:id="@+id/music_list_down_menu"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:src="@drawable/down_menu" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/music_list_down_menu"
            android:layout_toRightOf="@id/music_list_index"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/music_singer_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>